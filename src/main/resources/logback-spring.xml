<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 공통 프로퍼티 -->
    <property name="LOG_DIR" value="${LOG_DIR:-./logs}"/>
    <property name="PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="COLOR_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight([%thread]) %-5level %cyan(%logger{36}) - %msg%n"/>

    <!-- 콘솔 출력 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Boot 기본 색상 변환기를 그대로 사용 -->
            <pattern>${COLOR_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- INFO/WARN 전용 파일: 하루에 하나의 텍스트 파일 -->
    <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 오늘 쓰는 실시간 파일 -->
        <file>${LOG_DIR}/info.txt</file>

        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>

        <!-- INFO 이상만 통과 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <!-- 그 중 ERROR 는 거부 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 자정마다 rollover, 압축 없음 -->
            <fileNamePattern>${LOG_DIR}/%d{yyyy-MM-dd}-info.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- 30일 보관 -->
        </rollingPolicy>
    </appender>

    <!-- ERROR 이상 전용 파일: 하루에 하나의 텍스트 파일 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/error.txt</file>

        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/%d{yyyy-MM-dd}-error.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 비동기 래퍼 -->
    <appender name="ASYNC_INFO" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="INFO_FILE"/> <!-- 어떤 Appender에게 기록할지 지정 -->
        <queueSize>2048</queueSize>
        <!-- 큐 가득 차기 전 낮은 레벨 로그(Trace, Debug, info) 버릴지 결정 하는 남은 용량 %-->
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <appender name="ASYNC_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERROR_FILE"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <!-- 루트 로거 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_INFO"/>
        <appender-ref ref="ASYNC_ERROR"/>
    </root>

</configuration>
