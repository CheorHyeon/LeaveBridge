<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 공통 프로퍼티 -->
    <property name="LOG_DIR" value="${LOG_DIR:-./logs}"/>
    <!-- 롤링(날짜별) 파일만 하위 폴더로 보냄 -->
    <property name="INFO_ROLL_DIR" value="${LOG_DIR}/info"/>
    <property name="ERROR_ROLL_DIR" value="${LOG_DIR}/error"/>

    <property name="PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="COLOR_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight([%thread]) %-5level %cyan(%logger{36}) - %msg%n"/>

    <!-- 콘솔 출력(그대로 유지) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${COLOR_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- INFO/WARN 파일 (현재 파일은 상위 경로 유지) -->
    <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 실시간 쓰기 파일: ./logs/info.txt -->
        <file>${LOG_DIR}/info.txt</file>

        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <!-- INFO 이상만 통과 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <!-- ERROR는 제외 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>NEUTRAL</onMismatch>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 날짜별 파일만 ./logs/info/ 하위로 -->
            <fileNamePattern>${INFO_ROLL_DIR}/%d{yyyy-MM-dd}-info.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- ERROR 전용 파일 (현재 파일은 상위 경로 유지) -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 실시간 쓰기 파일: ./logs/error.txt -->
        <file>${LOG_DIR}/error.txt</file>

        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 날짜별 파일만 ./logs/error/ 하위로 -->
            <fileNamePattern>${ERROR_ROLL_DIR}/%d{yyyy-MM-dd}-error.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 비동기 래퍼 -->
    <appender name="ASYNC_INFO" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="INFO_FILE"/> <!-- 어떤 Appender에게 기록할지 지정 -->
        <queueSize>2048</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <appender name="ASYNC_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERROR_FILE"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <!-- 루트 로거 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_INFO"/>
        <appender-ref ref="ASYNC_ERROR"/>
    </root>

</configuration>
